  "bugs": {
    "url": "https://github.com/cassarro/templastic/issues"
  },
  "homepage": "https://github.com/cassarro/templastic#readme",
  "description": "",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "html-minifier": "^4.0.0",
    "uglify-js": "^3.17.4"
  }
}
